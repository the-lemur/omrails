<div class="box">
	<%= link_to (image_tag pin.image(:medium)), pin %>
	<p class="description">
		<%= pin.description %>
	</p>
	<p>
		<strong>
		City 
		</strong>
		<%= pin.City %>
	</p>
	<p>
		<strong>
		Category
		</strong>
		<%= pin.Category %>
	<p>
		<strong>
			Posted by
		</strong>
			<%= pin.user.name %>
	</p>
	
	<% if current_user == pin.user %>
		<p>
		<%= link_to 'Edit', edit_pin_path(pin) %>
		<%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
</div>
